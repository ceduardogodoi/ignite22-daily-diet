{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@routes": ["./src/routes"],
      "@screens/*": ["./src/screens/*"],
      "@theme": ["./src/theme"]
